<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back"
    tools:context=".StartFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="176dp"
        android:layout_height="176dp"
        android:layout_marginTop="122dp"
        app:cardBackgroundColor="@color/back"
        app:cardCornerRadius="90dp"
        app:cardElevation="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:cardCornerRadius="90dp">

        <ImageView
            android:id="@+id/imageView23"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/round" />

        <androidx.cardview.widget.CardView
            android:layout_width="163dp"
            android:layout_height="163dp"
            android:layout_gravity="center"
            app:cardCornerRadius="90dp">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/presents" />
        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>

    <ImageButton
        android:id="@+id/present"
        android:layout_width="219dp"
        android:layout_height="50dp"
        android:layout_marginTop="47dp"
        android:background="@drawable/radio_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />

    <ImageButton
        android:id="@+id/dark"
        android:layout_width="219dp"
        android:layout_height="50dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/button_shadow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/present" />

    <ImageButton
        android:id="@+id/autor"
        android:layout_width="219dp"
        android:layout_height="50dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/button_shadow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dark" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Выбрать подарок"
        android:textColor="@color/text"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/present"
        app:layout_constraintEnd_toEndOf="@+id/present"
        app:layout_constraintStart_toStartOf="@+id/present"
        app:layout_constraintTop_toTopOf="@+id/present" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Темная тема"
        android:textColor="@color/text"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/dark"
        app:layout_constraintEnd_toEndOf="@+id/dark"
        app:layout_constraintStart_toStartOf="@+id/dark"
        app:layout_constraintTop_toTopOf="@+id/dark" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Об авторе"
        android:textColor="@color/text"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/autor"
        app:layout_constraintEnd_toEndOf="@+id/autor"
        app:layout_constraintStart_toStartOf="@+id/autor"
        app:layout_constraintTop_toTopOf="@+id/autor" />
</androidx.constraintlayout.widget.ConstraintLayout>